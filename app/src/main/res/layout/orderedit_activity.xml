<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_recharge"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_navigation_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:scaleType="centerCrop"
        android:src="@mipmap/index_navi_bg"/>

    <LinearLayout
        android:id="@+id/view_need_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45">
            <ImageView
                android:id="@+id/title_back"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_12"
                android:src="@drawable/backdown"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="填写订单"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18"/>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_start_color_pressed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_start_color_pressed"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100"
                    android:paddingTop="@dimen/dimen_10">
                    <ImageView
                        android:id="@+id/iv_order_brand"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/brand_a0"/>
                    <TextView
                        android:id="@+id/tv_order_edit_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_order_edit_yearStyle"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_toRightOf="@id/iv_order_brand"
                        android:text="奥迪A3"
                        android:textColor="@color/font_black_0"
                        android:textSize="@dimen/dimen_14"/>
                    <TextView
                        android:id="@+id/tv_order_edit_yearStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_toRightOf="@id/iv_order_brand"
                        android:maxLines="1"
                        android:text="2014款30 TFSI Sportback时尚版"
                        android:textColor="@color/font_black_3"
                        android:textSize="@dimen/dimen_13"/>
                    <TextView
                        android:id="@+id/tv_order_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_edit_yearStyle"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_toRightOf="@id/iv_order_brand"
                        android:text="里程数：21.30公里"
                        android:textColor="@color/font_black_3"
                        android:textSize="@dimen/dimen_13"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:background="@color/font_black_6"/>
                </RelativeLayout>
                <RelativeLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60">
                    <TextView
                        android:id="@+id/tv_order_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:paddingBottom="3dp"
                        android:text="深圳市宝创汽车贸易有限公司"
                        android:textColor="@color/font_black_0"
                        android:textSize="@dimen/dimen_14"/>
                    <TextView
                        android:id="@+id/tv_order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_company"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:maxLines="1"
                        android:paddingBottom="3dp"
                        android:text="深圳市福田区深南中路3039号国际文化大厦1楼B2"
                        android:textColor="@color/font_black_3"
                        android:textSize="@dimen/dimen_11.5"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/rl_radius_fivedp">
                        <TextView
                            android:id="@+id/tv_order_refresh_time"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_5"
                            android:text="保养时间"
                            android:textSize="@dimen/dimen_15"/>
                        <com.szbc.widget.MClearEditText
                            android:id="@+id/et_order_upkeep_time"
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_order_refresh_time"
                            android:background="@null"
                            android:focusable="false"
                            android:hint=""
                            android:inputType="number"
                            android:paddingRight="@dimen/dimen_15"
                            android:singleLine="true"
                            android:text=""
                            android:textColorHint="#cccccc"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:textSize="@dimen/dimen_15"
                        />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/rl_radius_fivedp">
                        <TextView
                            android:id="@+id/tv_order_car_number"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_5"
                            android:text="车牌号码"
                            android:textSize="@dimen/dimen_15"/>
                        <com.szbc.widget.MClearEditText
                            android:id="@+id/et_order_car_number"
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="请输入完整的车牌号"
                            android:inputType="number"
                            android:paddingRight="@dimen/dimen_15"
                            android:singleLine="true"
                            android:text=""
                            android:textColorHint="#cccccc"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:textSize="@dimen/dimen_15" android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/tv_order_car_number"
                            android:layout_toEndOf="@+id/tv_order_car_number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60">
                        <RelativeLayout
                            android:id="@+id/rl_edit_username_sex"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_marginLeft="@dimen/dimen_15"
                            android:layout_marginRight="@dimen/dimen_80"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:background="@drawable/rl_radius_fivedp">
                            <TextView
                                android:id="@+id/tv_order_name"
                                android:layout_width="@dimen/dimen_100"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_5"
                                android:text="联系人"
                                android:textSize="@dimen/dimen_15"/>
                            <com.szbc.widget.MClearEditText
                                android:id="@+id/et_order_name"
                                android:layout_width="@dimen/dimen_200"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tv_order_name"
                                android:background="@null"
                                android:hint="请输入姓名"
                                android:paddingRight="@dimen/dimen_15"
                                android:singleLine="true"
                                android:text=""
                                android:textColorHint="#cccccc"
                                android:textCursorDrawable="@drawable/text_cursor"
                                android:textSize="@dimen/dimen_15"/>
                        </RelativeLayout>
                        <com.szbc.widget.CheckableImageView
                            android:id="@+id/iv_sex_man"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:layout_toLeftOf="@+id/iv_sex_female"
                            android:src="@drawable/male_selector"/>
                        <com.szbc.widget.CheckableImageView
                            android:id="@+id/iv_sex_female"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_45"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:src="@drawable/female_selector"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/rl_radius_fivedp">

                        <TextView
                            android:id="@+id/tv_order_phone"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_5"
                            android:text="手机号码"
                            android:textSize="@dimen/dimen_15"/>

                        <com.szbc.widget.MClearEditText
                            android:id="@+id/et_order_phone"
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_order_phone"
                            android:background="@null"
                            android:focusable="true"
                            android:hint="请输入手机号码"
                            android:inputType="number"
                            android:paddingRight="@dimen/dimen_15"
                            android:singleLine="true"
                            android:text=""
                            android:textColorHint="#cccccc"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:textSize="@dimen/dimen_15"
                        />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/rl_radius_fivedp">

                        <TextView
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_5"
                            android:text="上门取送"
                            android:textSize="@dimen/dimen_15"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_15"
                            android:gravity="center_vertical">
                            <com.szbc.widget.SlideSwitch
                                android:id="@+id/slide_pattern"
                                android:layout_width="@dimen/dimen_45"
                                android:layout_height="@dimen/dimen_24"
                                slideswitch:isOpen="false"
                                slideswitch:themeColor="#144284">
                            </com.szbc.widget.SlideSwitch>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dimen_220"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_25">
                        <LinearLayout
                            android:id="@+id/ll_order_edit_commit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_normal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="确认提交"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/dimen_18"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:background="@color/base_start_color_pressed"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>