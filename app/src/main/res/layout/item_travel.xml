<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_item_clicked"
            android:padding="@dimen/dimen_10">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@id/iv_image"
                android:layout_marginTop="@dimen/dimen_10"
                android:ellipsize="end"
                android:gravity="top|start"
                android:paddingBottom="@dimen/dimen_3"
                android:text=""
                android:maxLines="2"
                android:textColor="@color/font_black_0"
                android:textSize="@dimen/dimen_14"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@id/iv_image"
                android:maxLines="2"
                android:paddingBottom="@dimen/dimen_3"
                android:text=""
                android:textColor="@color/font_black_3"
                android:textSize="@dimen/dimen_11.5"/>
            <TextView
                android:id="@+id/tv_mileage_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@id/iv_image"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="@dimen/dimen_11.5"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_black_5"/>
</LinearLayout>