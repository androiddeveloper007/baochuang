<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical">
    <!--android:background="@drawable/ripple_item_clicked"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_3"
        android:paddingTop="@dimen/dimen_3">
        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_centerVertical="true"
            android:background="@drawable/order_doing_1" />

        <TextView
            android:id="@+id/tv_status_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_status"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_70"
            android:text="tv_status_info"
            android:maxLines="2"
            android:ellipsize="start"
            android:textColor="@color/font_black_3"
            android:textSize="@dimen/dimen_12"/>
        <TextView
            android:id="@+id/tv_extra_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_75"
            android:maxLines="2"
            android:ellipsize="start"
            android:layout_below="@+id/tv_status_info"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv_status"
            android:text="tv_extra_info"
            android:textColor="@color/font_black_0"
            android:textSize="@dimen/dimen_11.5"/>
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_extra_info"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv_status"
            android:textColor="@color/font_black_3"
            android:text="tv_order_time"
            android:textSize="@dimen/dimen_11.5"/>
        <TextView
            android:id="@+id/tv_order_subscribe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_time"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv_status"
            android:textColor="@color/font_black_3"
            android:textSize="@dimen/dimen_11.5"
            android:text="tv_order_subscribe_time"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_order_back_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_subscribe_time"
            android:layout_toRightOf="@id/iv_status"
            android:textColor="@color/font_black_3"
            android:textSize="@dimen/dimen_11.5"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_doing_btn"
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/button_order_doing"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_status_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="@color/accent"
                android:textSize="@dimen/dimen_11.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_doing_btn_affirm"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_28"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_doing_btn"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/button_order_doing"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_status_code_affirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接受"
                android:textColor="@color/accent"
                android:textSize="@dimen/dimen_12"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_doing_btn_call"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_28"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/button_order_doing"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_status_code_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话联系"
                android:textColor="@color/accent"
                android:textSize="@dimen/dimen_12.5"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_black_5"/>

</LinearLayout>