<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_navigation_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:scaleType="centerCrop"
        android:src="@mipmap/index_navi_bg"/>
    <LinearLayout
        android:id="@+id/view_need_offset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45">
            <ImageView
                android:id="@+id/title_back"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_12"
                android:src="@drawable/backdown"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="维护保养支付详情"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_done_detail_0"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:text="订单时间：2017-05-01 15:20:00"
                        android:textColor="@color/font_black_2"
                        android:textSize="@dimen/dimen_14"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_below="@+id/tv_done_detail_0"
                        android:background="@color/base_start_color_pressed"/>
                    <TextView
                        android:id="@+id/tv_done_detail_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_done_detail_0"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:text="深圳浩翼MINI"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_15"/>
                    <TextView
                        android:id="@+id/tv_done_detail_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_done_detail_1"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="深圳市福田区深南中路3039号国际文化大厦1楼B2"
                        android:textColor="@color/text_color_2"
                        android:textSize="@dimen/dimen_14"/>
                    <TextView
                        android:id="@+id/tv_done_detail_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_done_detail_2"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="245RF(10000公里)"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_14"/>
                    <TextView
                        android:id="@+id/tv_done_detail_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_done_detail_3"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="2017-05-01 周一 08:30"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_14"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_below="@+id/tv_done_detail_4"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@color/base_start_color_pressed"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_done_detail_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:text="维护清单"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dimen_15"/>
                    <LinearLayout
                        android:id="@+id/ll_orderDone_details"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_below="@+id/tv_done_detail_9"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.szbc.widget.ListView4ScrollView
                        android:id="@+id/lv_order_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:layout_below="@+id/ll_orderDone_details"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:layout_marginBottom="@dimen/dimen_15"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:background="@color/base_start_color_pressed"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_done_detail_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:text="合计总额"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/dimen_18"/>
                    <TextView
                        android:id="@+id/tv_done_detail_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_done_detail_20"
                        android:layout_marginBottom="@dimen/dimen_15"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:text="如需发票请向4S商家索取"
                        android:textColor="@color/font_black_4"
                        android:textSize="@dimen/dimen_14.5"/>
                    <TextView
                        android:id="@+id/tv_done_detail_20_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_35"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:text="￥5223"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/dimen_18"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:background="@color/base_start_color_pressed"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/ll_btn_pay"
                    android:layout_width="@dimen/dimen_250"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_above="@+id/rl_call_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_60"
                    android:background="@drawable/button_normal"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认支付"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dimen_18"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_call_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_90"
                    android:layout_marginRight="@dimen/dimen_90">
                    <TextView
                        android:id="@+id/tv_call_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="400-000-2658"
                        android:textColor="@color/app"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_call_phone"
                        android:src="@drawable/call_phone"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>