<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:scaleType="centerCrop"
        android:src="@mipmap/index_navi_bg"/>

    <LinearLayout
        android:id="@+id/view_need_offset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45">
            <ImageView
                android:id="@+id/title_back"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_28"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_12"
                android:src="@drawable/backdown"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改车辆信息"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_normal_bg_color"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_35"
                android:background="@drawable/rl_radius_fivedp">

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="汽车品牌:"
                    android:textSize="@dimen/dimen_14"/>

                <LinearLayout
                    android:id="@+id/ll_edit_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/tv_brand"
                    android:background="@null" >
                    <TextView
                        android:id="@+id/tv_edit_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奥迪"
                        android:textSize="@dimen/dimen_14"
                        android:textColor="@color/font_black_1"
                        android:layout_marginLeft="@dimen/dimen_15" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/rl_radius_fivedp">

                <TextView
                    android:id="@+id/tv_series"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="汽车系列:"
                    android:textSize="@dimen/dimen_14"/>
                <LinearLayout
                    android:id="@+id/ll_edit_series"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/tv_series"
                    android:background="@null"
                >
                    <TextView
                        android:id="@+id/tv_edit_series"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A4"
                        android:textSize="@dimen/dimen_14"
                        android:textColor="@color/font_black_1"
                        android:layout_marginLeft="@dimen/dimen_15"
                    />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/rl_radius_fivedp">

                <TextView
                    android:id="@+id/tv_config"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="汽车配置:"
                    android:textSize="@dimen/dimen_14"/>
                <LinearLayout
                    android:id="@+id/ll_edit_config"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/tv_config"
                    android:background="@null" >
                    <TextView
                        android:id="@+id/tv_edit_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014款30TFSI Sportback时尚版"
                        android:textSize="@dimen/dimen_14"
                        android:textColor="@color/font_black_1"
                        android:layout_marginLeft="@dimen/dimen_15" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/rl_radius_fivedp">
                <TextView
                    android:id="@+id/tv_range"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="行驶里程:"
                    android:textSize="@dimen/dimen_14"/>
                <LinearLayout
                    android:id="@+id/ll_edit_range"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/tv_range"
                    android:background="@null" >
                    <TextView
                        android:id="@+id/tv_edit_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000公里"
                        android:textSize="@dimen/dimen_14"
                        android:textColor="@color/font_black_1"
                        android:layout_marginLeft="@dimen/dimen_15" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/rl_radius_fivedp">

                <TextView
                    android:id="@+id/tv_buy_time"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="购车时间:"
                    android:textSize="@dimen/dimen_14"/>
                <LinearLayout
                    android:id="@+id/ll_edit_buy_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/tv_buy_time"
                    android:background="@null" >
                    <TextView
                        android:id="@+id/tv_edit_buy_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014/05/23"
                        android:textSize="@dimen/dimen_14"
                        android:textColor="@color/font_black_1"
                        android:layout_marginLeft="@dimen/dimen_15" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Layout_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_marginRight="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/button_normal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认提交"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dimen_18"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>